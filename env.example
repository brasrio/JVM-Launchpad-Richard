# ===========================================
# JVM Launchpad - Variáveis de Ambiente
# ===========================================
# Copie este arquivo para .env e preencha os valores

# Servidor
PORT=3000
NODE_ENV=development

# JWT (JSON Web Token)
JWT_SECRET=sua_chave_secreta_muito_forte_aqui_min_32_chars
JWT_EXPIRES_IN=24h

# Firebase Admin SDK (Backend)
# Para obter: Firebase Console > Configurações > Contas de serviço > Gerar nova chave
FIREBASE_PROJECT_ID=seu-projeto-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@seu-projeto.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nSUA_CHAVE_PRIVADA_AQUI\n-----END PRIVATE KEY-----\n"

# Firebase Web Config (Frontend)
FIREBASE_API_KEY=sua-api-key
FIREBASE_AUTH_DOMAIN=seu-projeto.firebaseapp.com
FIREBASE_STORAGE_BUCKET=seu-projeto.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=seu-sender-id
FIREBASE_APP_ID=seu-app-id
FIREBASE_MEASUREMENT_ID=seu-measurement-id

# Email Configuration (Gmail SMTP)
# Para Gmail: https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=seu-email@gmail.com
EMAIL_PASS=sua-senha-de-app-do-gmail

# URL da Aplicação
APP_URL=https://seu-projeto.vercel.app